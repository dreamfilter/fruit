<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lovcreate.service.dao.UserMapper">

    <insert id="insert">
        insert into user(name,age,sex) VALUES (#{name},#{age},#{sex})
    </insert>

    <select id="selectPassWord" resultType="com.lovcreate.api.bean.response.UserResponse">
        select * from user where name=#{userNamr} and del_status=1
    </select>

    <select id="checkLogin" resultType="com.lovcreate.api.bean.response.UserResponse">
        SELECT * from user WHERE name=#{username} and password=#{password} and del_status=1
    </select>
</mapper>